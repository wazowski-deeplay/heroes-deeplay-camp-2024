<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="385.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.deeplay.camp.app.controller.MenuController">

    <VBox alignment="CENTER" layoutX="125.0" layoutY="87.0" prefHeight="260.0" prefWidth="350.0" spacing="20">
        <Button onAction="#showCreateGame" prefHeight="50.0" prefWidth="280.0" text="Создать игру">
            <font>
                <Font name="System Bold Italic" size="20.0"/>
            </font>
        </Button>
        <Button onAction="#showJoinGameView" prefHeight="50.0" prefWidth="280.0" text="Присоединиться к игре">
            <font>
                <Font name="System Bold Italic" size="20.0"/>
            </font>
        </Button>
        <Button onAction="#showSettingsView" mnemonicParsing="false" prefHeight="50.0" prefWidth="280.0"
                text="Настройки">
            <font>
                <Font name="System Bold Italic" size="20.0"/>
            </font>
        </Button>
        <Button onAction="#exitGame" prefHeight="50.0" prefWidth="280.0" text="Выйти из игры">
            <font>
                <Font name="System Bold Italic" size="20.0"/>
            </font>
        </Button>
    </VBox>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="200.0" layoutY="14.0" prefHeight="37.0" prefWidth="200.0"
           text="HEROES" textAlignment="JUSTIFY">
        <font>
            <Font name="Comic Sans MS Bold Italic" size="38.0"/>
        </font>
    </Label>

</AnchorPane>
